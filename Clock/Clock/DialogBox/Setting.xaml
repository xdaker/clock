<UserControl x:Class="Clock.DialogBox.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clock.DialogBox"
             mc:Ignorable="d" d:DesignWidth="300" Height="384">
    <Grid x:Name="ViewGrid">
        <Slider x:Name="slider" Height="10.813" Margin="23,32.48,49,0" VerticalAlignment="Top" Style="{StaticResource Slider_CustomStyle}" Value="{Binding ViewColorR,Mode=TwoWay}" Maximum="255" Minimum="0"/>
        <TextBlock x:Name="textBlock" Height="19" Margin="23,8,213,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Text="窗口颜色" HorizontalAlignment="Center"/>
        <TextBlock x:Name="textBlock1" Height="14" Margin="10,30.813,282,0" TextWrapping="Wrap" Text="R" VerticalAlignment="Top"/>
        <TextBox x:Name="ViewColorRText" HorizontalAlignment="Right" Height="14" Margin="0,30.813,10,0" TextWrapping="Wrap" Text="{Binding Value, ElementName=slider , Mode=TwoWay}" VerticalAlignment="Top" Width="32" FontSize="10.667" Background="{x:Null}" BorderBrush="{x:Null}"/>

    </Grid>
</UserControl>
