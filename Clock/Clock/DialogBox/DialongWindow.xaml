<Window x:Class="Clock.DialogBox.DialongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clock.DialogBox"
        mc:Ignorable="d"
        Title="DialongWindow" Height="300" Width="300" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" >
    <Grid x:Name="GridWindow" Background="{Binding FrontViewColorBrush ,Mode=OneWay}" 
          MouseLeftButtonDown="GridWindow_MouseDown" MouseUp="GridWindow_OnMouseUp" >
        <Grid x:Name="ViewGrid" HorizontalAlignment="Left" VerticalAlignment="Top"></Grid>
        <Grid>
            <Image x:Name="ImageOk" HorizontalAlignment="Left" Margin="30,0,0,0" Width="45" Source="/Clock;component/Imge/ok_normal.png" Panel.ZIndex="10" Height="45" VerticalAlignment="Bottom"/>
            <Image x:Name="ImageCancel" HorizontalAlignment="Right" Margin="0,0,30,0" Width="45" Source="/Clock;component/Imge/cancel_normal.png" Panel.ZIndex="10" Height="45" VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Window>
